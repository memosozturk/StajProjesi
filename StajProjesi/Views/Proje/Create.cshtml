@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script type="text/javascript">
    CKEDITOR.replace('editor');
</script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2>Proje Oluştur</h2>
    <div class="form">
        <form class="form-validate form-horizontal" id="create" method="post" action="/Proje/Create/">
            <div class="form-group ">
                <label for="ProjeAdi" class="control-label col-lg-2">Proje Adı <span class="required">*</span></label>
                <div class="col-lg-10">
                    <input class="form-control" id="ProjeAdi" name="ProjeAdi" type="text" required />
                </div>
            </div>
            <div class="form-group ">
                <label for="ProjeAciklama" class="control-label col-lg-2">Açıklama <span class="required">*</span></label>
                <div class="col-lg-10">
                    <textarea name="ProjeAciklama" required class="ckeditor"></textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button class="btn btn-primary" type="submit">Kaydet</button>
                    <button class="btn btn-default" type="button"><a href="/Proje/Index/">Geri Dön</a></button>
                </div>
            </div>
        </form>
    </div>
}